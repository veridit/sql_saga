-- Test DELETE_FOR_PORTION_OF to ensure the fix is generic
--
BEGIN;
SET datestyle TO 'ISO, DMY';
\echo '--- SETUP: Recreate table and initial data for DELETE_FOR_PORTION_OF test ---'
