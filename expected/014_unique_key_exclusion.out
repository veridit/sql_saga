--
-- 1.2. Small shift to a later time, moving the earlier range first:
--
--
DELETE FROM rooms;
DELETE FROM houses;
INSERT INTO houses (id, assessment, valid_from, valid_until) VALUES
  (1, 150000, '2015-01-01', '2016-01-01'),
